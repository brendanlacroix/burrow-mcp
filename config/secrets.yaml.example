# Tuya device local keys (get these using tinytuya wizard)
tuya:
  plug_tv:
    local_key: "xxxxxxxxxxxxxxxx"

# August smart lock credentials
august:
  username: "email@example.com"
  password: "xxxxx"
  lock_id: "XXXXXX"

# Roomba credentials for LOCAL control (older models using iRobot HOME app)
# Get blid/password using: python -m roombapy.entry_points discover
# Per-device credentials - key matches device id in config.yaml
roomba:
  roomba_downstairs:
    blid: "xxxxxxxxxxxxxxxx"
    password: "xxxxxxxxxxxxxxxx"
    ip: "192.168.1.xxx"  # Optional, can also be in config.yaml
  roomba_upstairs_local:  # Example if you have multiple local Roombas
    blid: "yyyyyyyyyyyyyyyy"
    password: "yyyyyyyyyyyyyyyy"
    ip: "192.168.1.yyy"

# Roomba credentials for CLOUD control (newer models using Roomba Home app)
# Uses your iRobot account login credentials
roomba_cloud:
  username: "email@example.com"
  password: "your_irobot_password"

# Govee API key (from Govee developer portal)
govee:
  api_key: "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"

# MQTT broker for presence sensors
mqtt:
  host: "192.168.1.xxx"
  port: 1883
  username: "burrow"
  password: "xxxxx"

# AppleTV credentials (optional - only needed if pairing is required)
# Get credentials using: atvremote scan && atvremote pair
# Most AppleTVs work without explicit credentials if on the same network
appletv:
  appletv_living:
    credentials:
      # Protocol-specific credentials from pairing process
      # MRP: "xxxxxxxx..."   # Most common protocol for newer AppleTVs
      # AirPlay: "xxxxxxxx..."
      # Companion: "xxxxxxxx..."
